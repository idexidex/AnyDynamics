<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChartActivity" >

    <LinearLayout
        android:id="@+id/llayChartBrik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/brik1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99cc66"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/brik2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cc66cc"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/brik3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66cccc"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/brik4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f89fff"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/brik5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#11aacc"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/brikOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:minWidth="0dp" />
    </LinearLayout>

    <TableLayout
   
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#99cc66"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cc66cc"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#66cccc"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f89fff"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#11aacc"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bntChartLabelOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textChartLabelOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>
	
	<LinearLayout
        android:id="@+id/lineSiriesLl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
	<!--
		<Button android:id="@+id/updateButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_gravity="right"
			android:text="Update"/> 
	-->
		<com.iguanaui.controls.DataChart android:id="@+id/dataChart"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2" /> 
    </LinearLayout>
</LinearLayout>
